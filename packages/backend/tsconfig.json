{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "skipLibCheck": true,
        "incremental": true,
        "plugins": [
            {
                "transform": "@nestia/core/lib/transform"
            },
            {
                "transform": "@nestia/sdk/lib/transform"
            },
            {
                "transform": "typia/lib/transform"
            }
        ],
        "paths": {
            "@src/*": ["./src/*"],
            "@common/*": ["./src/common/*"],
            "@shared/*": ["./src/shared/*"],
            "@config": ["./src/config"],
            "@modules/*": ["./src/modules/*"]
        }
    }
}
