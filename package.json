        "start": "pnpm -r  start",
        "lint": "pnpm -r  lint",
        "prettier": "pnpm -r  prettier",
        "prisma:format": "pnpm --filter backend prisma:format",
        "prisma:migrate": "pnpm --filter backend prisma:migrate",
        "prisma:studio": "pnpm --filter backend prisma:studio",
        "prisma:generate": "pnpm --filter backend prisma:generate",
        "start:dev": "pnpm --filter backend start:dev",
        "start:debug": "pnpm --filter backend start:debug",
        "start:prod": "pnpm --filter backend start:prod",
        "test": "pnpm --filter backend test",
        "test:watch": "pnpm --filter backend test:watch",
        "test:cov": "pnpm --filter backend test:cov",
        "test:debug": "pnpm --filter backend test:debug",
        "test:e2e": "pnpm --filter backend test:e2e",
        "sdk": "pnpm --filter backend sdk",
        "swagger": "pnpm --filter backend swagger",
        "dev": "pnpm --filter frontend dev",
        "prepare": "husky"
